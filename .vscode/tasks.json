{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Bundle to Single Javascript File",
            "command": "deno",
            "args": [
                "run",
                "--allow-read",
                "--allow-run",
                "./bin/bundle.ts"
            ],
            "group": "build"
        },
        {
            "label": "Compile to Native Executable File",
            "command": "deno",
            "args": [
                "run",
                "--allow-read",
                "--allow-run",
                "./bin/compile.ts"
            ],
            "group": "build"
        },
        {
            "label": "Install ESBuilder",
            "command": "deno",
            "args": [
                "run",
                "--allow-read",
                "--allow-run",
                "./bin/install.ts"
            ],
            "group": "build"
        },
        {
            "label": "Uninstall ESBuilder",
            "command": "deno",
            "args": [
                "uninstall",
                "esbuilder"
            ],
            "group": "build"
        },
        {
            "label": "Reinstall ESBuilder",
            "dependsOrder": "sequence",
            "dependsOn":[
                "Uninstall ESBuilder",
                "Install ESBuilder"
            ],
            "group": "build",
        },
        {
            "label": "üèñ ‚Äî Run Demo",
            "options": {
                "cwd": "./demo"
            },
            "command": "deno",
            "args": [
                "run",
                "--allow-read",
                "--allow-write",
                "--allow-env",
                "--allow-run",
                "--allow-net",
                "--no-prompt",
                "../builder.ts",
                "--c=./config.json"
            ],
            "group": "build"
        }
    ]
}